@model ImageUploader.Web.Models.HomeModel
@{
    ViewBag.Title = "Home Page";
}


<div class="row jumbotron">
    <h1>Photo Gallery</h1>
</div>

<div class="row">
    <form role="form" data-toggle="validator" action="~/" method="get">
        <fieldset>
            <legend>Search By Tag Name</legend>
            <input maxlength="100" type="text" name="tagName" />
            <input type="submit" class="btn btn-primary" />
        </fieldset>
    </form>
</div>

<div class="imagelist row">
    @foreach (var i in Model.Images)
    {
        <div class="tilecontainer col-lg-2 col-md-4 col-sm-6">
            <div class="closeItem">
                <img class="imgtile" src="/File?fileId=@i.ImageGUID" onclick="ShowFullImage('@i.ImageGUID')" />
                <div class="hover-btn">
                    <button type="button" onclick="DeleteImage('@i.ImageGUID');">
                        <span aria-hidden="false">×</span>
                        <span class="sr-only">Close</span>
                    </button>
                </div>
            </div>
        </div>
    }
</div>

<div class="row">
    <button type="button" class="uploadbtn btn btn-primary" onclick="javascript:window.location='/Upload'">Upload a New File</button>
</div>
