@model ImageUploader.Web.Models.UploadModel
@{
    ViewBag.Title = "Upload";
}

<div class="row jumbotron">
    <h1>Upload File</h1>
</div>

<form role="form" data-toggle="validator" action="/Upload" method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label for="theFile">Choose File</label>
        <input required class="form-control-file" type="file" name="file" id="theFile" />
    </div>

    <div class="form-group">
        <label for="desc">Description</label>
        <textarea maxlength="2000" required class="form-control" name="Description" id="desc" ></textarea>
    </div>

    <fieldset>
        <legend>Enter up to three tags to describe the image</legend>
        <div class="form-group">
            <label for="tag1">First Tag</label>
            <input maxlength="2000" class="form-control" type="text" name="Tags" id="tag1" />
            <div class="help-block with-errors"></div>
        </div>
        <div class="form-group">
            <label for="tag2">Second Tag</label>
            <input maxlength="2000" class="form-control" type="text" name="Tags" id="tag2" />
        </div>
        <div class="form-group">
            <label for="tag3">Third Tag</label>
            <input maxlength="2000" class="form-control" type="text" name="Tags" id="tag3" />
        </div>
    </fieldset>

    <div class="row">
        <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
            <button type="submit" class="btn btn-primary">Upload</button>
        </div>
        <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
            <button type="button" class="btn btn-primary" onclick="javascript:window.location='/'">Cancel</button>
        </div>
        
    </div>

    
</form>